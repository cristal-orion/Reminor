# Caddyfile - Reverse proxy for Reminor
# Domain is configured via DOMAIN env var in .env.production
# Default :80 = plain HTTP on all interfaces (for local/IP access)
# Set DOMAIN=yourdomain.com for automatic SSL via Let's Encrypt

{$DOMAIN::80} {
    # Enable compression
    encode gzip

    # API Backend - proxy to FastAPI
    handle /api/* {
        uri strip_prefix /api
        reverse_proxy backend:8000
    }

    # Auth endpoints
    handle /auth/* {
        reverse_proxy backend:8000
    }

    # Health check
    handle /health {
        reverse_proxy backend:8000
    }

    # Chat endpoint
    handle /chat* {
        reverse_proxy backend:8000
    }

    # Journal endpoints
    handle /journal/* {
        reverse_proxy backend:8000
    }

    # Frontend - static files
    handle {
        root * /srv/frontend
        try_files {path} /index.html
        file_server
    }

    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
    }

    # Log
    log {
        output file /var/log/caddy/access.log
        format console
    }
}
